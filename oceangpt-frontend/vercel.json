{
  "version": 2,
  "name": "oceangpt-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://oceangpt-platform.onrender.com"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://oceangpt-platform.onrender.com"
    }
  }
}